<Window x:Class="WpfApp1.AddCashPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddPaymentWindow" Height="180" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Сумма платежа:" Margin="0,0,0,5"/>
        <TextBox Name="txtAmount"  Margin="0,0,0,20"/>

        <Button Content="Сохранить" Width="110" HorizontalAlignment="Center" Click="btnSave_Click"/>
    </StackPanel>
</Window>
