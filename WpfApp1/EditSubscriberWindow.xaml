<Window x:Class="WpfApp1.EditSubscriberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EditSubscriberWindow" Height="250" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Имя абонента:" />
        <TextBox Name="txtName" Margin="0,5,0,10" />

        <TextBlock Text="Номер телефона (+375XXXXXXXXX):" />
        <TextBox Name="txtPhoneNumber" Margin="0,5,0,20" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Сохранить" Width="110" Margin="5" Click="SaveButton_Click" />
            <Button Content="Отмена" Width="90" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
