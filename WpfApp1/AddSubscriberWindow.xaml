<Window x:Class="WpfApp1.AddSubscriberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddSubscriberWindow" Height="250" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Имя абонента:" Margin="0,0,0,5"/>
        <TextBox Name="txtName" Margin="0,0,0,10"/>

        <TextBlock Text="Номер телефона (+375XXXXXXXXX):" Margin="0,0,0,5"/>
        <TextBox Name="txtPhoneNumber" Margin="0,0,0,20" />
        

        <Button Content="Сохранить" Width="100" HorizontalAlignment="Center" Click="btnSave_Click"/>
    </StackPanel>
</Window>
